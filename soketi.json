    "cors": {
        "credentials": true,
        "origin": ["*"],
        "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
        "allowedHeaders": [
            "Origin",
            "Content-Type",
            "X-Auth-Token",
            "X-Requested-With",
            "Accept",
            "Authorization",
            "X-CSRF-TOKEN",
            "XSRF-TOKEN",
            "X-Socket-Id"
