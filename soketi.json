{
    "adapter": {
        "driver": "local"
    },
    "appManager": {
        "name": "array",
        "options": {
            "apps": [
                {
                    "id": "my-chat-key",
                    "key": "ASDFGHJKL",
                    "secret": "QWERTYU",
                    "name": "Laravel",
                    "enableClientMessages": true,
